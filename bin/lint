#!/usr/bin/env python3
# This file is placed in the Public Domain


"linted"


import os
import sys


NAME = "nixm"


def popen(txt):
    "run text in popen."
    for line in os.popen(txt).readlines():
        print(line.rstrip())
        sys.stdout.flush()


if os.path.exists("bin/clean"):
    popen("bin/clean")


popen("pylint nixm/*.py nixm/modules/*.py bin/tinder tests/*.py")
